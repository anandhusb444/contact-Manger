@{
    Layout = null;
    ViewData["Title"] = "Contact Manager";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Inline Styles -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f9f9f9;
            overflow: hidden; /* removes scrollbar */
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 0.9rem;
            padding: 8px 10px;
        }

            .form-control:focus {
                border-color: #6a4df4;
                box-shadow: 0 0 0 0.15rem rgba(106, 77, 244, 0.25);
            }

        .card {
            background-color: white;
        }
    </style>
</head>
<body>

    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-sm border-0" style="border-radius: 12px; width: 400px;">
            <div class="card-body p-4">
                <h4 class="fw-bold mb-4 text-center" style="color: #333;">Add New Contact</h4>

                <form asp-action="AddContact" method="post">
                    <!-- Name -->
                    <div class="mb-3">
                        <label for="Name" class="form-label fw-semibold">Full Name</label>
                        <input type="text" name="Name" class="form-control" placeholder="Enter full name" required>
                    </div>

                    <!-- Number -->
                    <div class="mb-3">
                        <label for="Phone" class="form-label fw-semibold">Phone Number</label>
                        <input type="tel" name="Phone" class="form-control" placeholder="Enter phone number" required>
                    </div>

                    <!-- Place -->
                    <div class="mb-3">
                        <label for="Address" class="form-label fw-semibold">Place</label>
                        <input type="text" name="Address" class="form-control" placeholder="Enter place">
                    </div>

                    <!-- Date of Birth -->
                    <div class="mb-4">
                        <label for="DOB" class="form-label fw-semibold">Date of Birth</label>
                        <input type="date" name="DOB" class="form-control">
                    </div>

                    <div class="mb-4">
                        <label for="Remark" class="form-label fw-semibold">Remarks</label>
                        <input type="text" name="Remark" class="form-control">
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Contacts")" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn text-white" style="background-color:#6a4df4; border-radius:8px;">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
