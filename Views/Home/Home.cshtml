@{
    Layout = null;
    ViewData["Title"] = "Contact Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />


    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
            font-family: 'Poppins', sans-serif;
        }

        .content-area {
            height: calc(100vh - 56px); /* 56px is the default navbar height */
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#03001c;">
        <div class="container-fluid d-flex justify-content-between">
            <a class="navbar-brand" href="#">Contact Manager</a>
            <div class="d-flex gap-3">
                <a class="navbar-brand " href="#" >Add</a>
                <a class="navbar-brand " href="#">Notification</a>
                <hr class="text-bg-light"/>
                <a class="navbar-brand " href="#">celender</a>
                <a class="navbar-brand " href="#">login</a>
            </div>
        </div>
    </nav>

    <div class="position-relative content-area bg-white">

        <!-- Left Sidebar -->
        <div class=" vh-100 position-absolute top-0 start-0 d-flex flex-column  align-items-center py-3" style="width: 60px; background-color: white">
            
                <a href="#">
                <span class="material-symbols-outlined my-3 " style="color:#4a4a68; font-weight:200">
                        home_app_logo
                    </span>
                </a>
                <a>
                <span class="material-symbols-outlined my-3" style="color:#4a4a68; font-weight:200">
                        contacts_product
                    </span>
                </a>
                <a>
                    <span class="material-symbols-outlined my-3" style="color:#4a4a68; font-weight:200">
                        local_taxi
                    </span>
                </a>
                <a>
                <span class="material-symbols-outlined my-3" style="color:#4a4a68; font-weight:200">
                        amp_stories
                    </span>
                </a>
                <a>
                <span class="material-symbols-outlined my-3" style="color:#4a4a68; font-weight:200">
                        account_circle_off
                    </span>
                </a>
                <a>
                <span class="material-symbols-outlined my-3" style="color:#4a4a68; font-weight:200">
                        earthquake
                    </span>
                </a>
            
        </div>

        <!-- Main Content Centered -->
        <div class="w-100 h-100 d-flex justify-content-center align-items-center">
            <div class="vw-100 h-100 bg-white text-black d-flex justify-content-center align-items-center">
                <div class="m-3 py-3 bg-white" style="width:90%; height:100%">
                    <h3 class="px-5">Contacts</h3>
                    <p class="px-5 ">View all your contacts </p>
                    

                    <div class="border-bottom border-black w-75 mx-lg-5 mb-3">
                        <a href="#" class="">All Contacnts</a> 
                        <a href="#" class="px-3">Stared</a>
                        <a href="#" class="px-3">Personal</a>
                        <a href="#" class="px-3">work</a>
                        <a href="#" class="px-3">Deleted</a>
                    </div>

                    <table class="table-bordered mx-lg-5">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Place</th>
                                <th>DOB</th>
                                <th>Open At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Anandhu</td>
                                <td>1234567890</td>
                                <td>Pookkad</td>
                                <td>17-04-2003</td>
                                <td>30-07-2025-10:24</td 
                            </tr>
                            <!-- Add some rows here -->
                        </tbody>
                    </table>

                </div>
               
            </div>
        </div>

    </div>

</body>
</html>
