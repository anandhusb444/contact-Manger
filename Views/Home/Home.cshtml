@{
    Layout = null;
    ViewData["Title"] = "Contact Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
            font-family: 'Poppins', sans-serif;
        }

        .content-area {
            height: calc(100vh - 56px); /* 56px is the default navbar height */
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#03001c;">
        <div class="container-fluid d-flex justify-content-between">
            <a class="navbar-brand" href="#">Contact Manager</a>
            <div class="d-flex gap-3">
                <a class="navbar-brand " href="#" >About</a>
                <a class="navbar-brand " href="#">Notification</a>
                <hr />
                <a class="navbar-brand " href="#">Login</a>
            </div>
        </div>
    </nav>

    <div class="position-relative content-area bg-danger">

        <!-- Left Sidebar -->
        <div class="bg-secondary vh-100 position-absolute top-0 start-0" style="width: 50px;">
        </div>

        <!-- Main Content Centered -->
        <div class="w-100 h-100 d-flex justify-content-center align-items-center">
            <div class="vw-100 h-100 bg-black text-white d-flex justify-content-center align-items-center text-center">
                <div class="m-3 bg-success" style="width:90%; height:100%">
                    Sub container
                </div>
               
            </div>
        </div>

    </div>

</body>
</html>
