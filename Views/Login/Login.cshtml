@model contact_Manger.Models.Users;



<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 bg-light hide">
    <form asp-action="Login" method="post" class="p-4 rounded shadow hide justify-content-center text-center" style="max-width: 300px; width: 100%; background-color: white;">
        <div class="text-center mb-3">
            <h5 class="mb-1 text-start fw-bold" style="font-family:'poppins',sans-serif">Welcome Back</h5>
            <p class="text-muted mb-0" style="font-family:'poppins',sans-serif; font-size:0.75rem;">Welcome back! Please enter your details</p>
        </div>

        <div class="mb-3 text-start">
            <label for="email" class="form-label small" style="font-family:'poppins',sans-serif">Email</label><br />
            <input type="text" name="Email" id="email" style="width:245px; border:1px solid #666666" class="small p-1 px-2 rounded-1" placeholder="Enter your email" />
        </div>

        <div class="mb-3 text-start">
            <label for="password" class="form-label small " style="font-family:'poppins',sans-serif">Password</label><br />
            <input type="password" name="Password" id="password" style="width:245px; border:1px solid #666666" class="small p-1 px-2 rounded-1" placeholder="Enter your password" />
        </div>

        <div class="mb-3 text-start">
            <button type="submit" class="small text-white p-1 rounded-2" style="width:245px; font-family:'poppins',sans-serif; border:1px solid #666666; background-color:#03001c">Login</button>
        </div>
    </form>
</div>
